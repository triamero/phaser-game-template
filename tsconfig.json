{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "strictNullChecks": false,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "baseUrl": "./src",
        "paths": {
            "@app/*": [
                "./*"
            ]
        },
        "typeRoots": [
            "node_modules/@types",
            "src/typings"
        ]
    },
    "include": ["./src"],
    "exclude": ["./ui"]
}
